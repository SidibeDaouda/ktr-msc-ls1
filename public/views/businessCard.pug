include includes/head.pug
include ./includes/navBar.pug
section.hero.is-primary.is-fullheight-with-navbar
  .hero-body
    .container
      .columns.is-centered
        .column.is-5-tablet.is-4-desktop.is-3-widescreen
          p Cartes de visite disponible non échancées
          if (businessCards) 
            each businessCard, key in businessCards
              div(class="notification is-info" id="#{key}")
                form.form() 
                  if(businessCard.name)
                    p Nom: #{businessCard.name}
                  if(businessCard.companyName)
                    p(id="#{key}") Entreprise: #{businessCard.companyName}
                  p Email: #{businessCard.email}
                  if(businessCard.tel)
                    p Tel: #{businessCard.tel}
                  br
                  
                  p.has-text-right
                    button.button 
                      i.fa.fa-bookmark

include includes/footer.pug




