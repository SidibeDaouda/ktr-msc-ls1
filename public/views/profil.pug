include includes/head.pug
include ./includes/navBar.pug
section.hero.is-primary.is-fullheight-with-navbar
  .hero-body
    .container
      .columns.is-centered
        .column.is-5-tablet.is-4-desktop.is-3-widescreen
          h1.subtitle.has-text-centered Ma carte de visite
          form.box(action='' method='POST')
            include ./includes/messages.pug
            .field
              label.label(for='name') Nom 
              .control.has-icons-left
                input.input(type='text' name='name' id='name' value= typeof user.name != 'undefined' ? user.name : '' )
                span.icon.is-small.is-left
                  i.fa.fa-user
            .field
              label.label(for='companyName') Nom de l'entreprise 
              .control.has-icons-left
                input.input(type='text' name='companyName' value= typeof user.companyName != 'undefined' ? user.companyName : '' id='companyName')
                span.icon.is-small.is-left
                  i.fa.fa-home
            .field
              label.label(for='email') Email
              .control.has-icons-left
                input.input(type='email'  name='email' id='email' value= typeof user.email != 'undefined' ? user.email : '' required)
                span.icon.is-small.is-left
                  i.fa.fa-envelope
            .field
              label.label(for='tel') Telephone
              .control.has-icons-left
                input.input(type='tel' name='tel' id='tel' value= typeof user.tel != 'undefined' ? user.tel : '')
                span.icon.is-small.is-left
                  i.fa.fa-phone
            .field
              p.has-text-centered
                button.button.is-primary Enregister

include includes/footer.pug






